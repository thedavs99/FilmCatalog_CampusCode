<% if flash[:notice]%>
	<div>
	<%= flash[:notice]%>
	</div>
<%end%>

<%= form_with model: movie do | f | %>
  <div>
    <%= f.label 'Titulo' %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label 'Ano de lançamento' %>
    <%= f.date_field :release_date%>
  </div>

  <div>
    <%= f.label 'Diretor' %>
    <%= f.collection_select :director_id, Director.all, :id, lambda { |d| "#{d.name} #{d.last_name}"} %>
  </div>

  <div>
    <%= f.label 'Pais' %>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label 'Gênero' %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div>
    <%= f.label 'duração' %>
    <%= f.number_field :running_time %>
  </div>

  <div>
    <%= f.label 'Sipnose' %>
    <%= f.text_area :sypnosis %>
  </div>

  <div>
    <%= f.label 'Poster' %>
    <%= f.file_field :poster %>
  </div>

	<div>
		<%= f.submit 'Salvar' %>
	</div>
<%end%>   